<tr>

    <td class="align-middle text-center">
        @Model.Name
    </td>

    <td class="text-center">
        <PriorityLevelEditCell @bind-PriorityLevel="Model.PriorityLevel" />
    </td>

    <td>
        <div class="d-flex justify-content-center">
            <button class="btn btn-sm alert-secondary" @onclick="Save">
                <span class="oi oi-check"></span>
                Save
            </button>
            <button class="btn btn-sm alert-secondary mx-2" @onclick="Delete">
                <span class="oi oi-trash"></span>
                Delete
            </button>
        </div>
    </td>

</tr>

@code {
    [Parameter]
    public PriorityViewModel Model { get; set; }
    [Parameter]
    public EventCallback<PriorityViewModel> OnSave { get; set; }
    [Parameter]
    public EventCallback<PriorityViewModel> OnDelete { get; set; }

    async Task Save() => await OnSave.InvokeAsync(Model);

    async Task Delete() => await OnDelete.InvokeAsync(Model);

}
